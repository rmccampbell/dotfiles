#-*- mode: sh -*-

if [ -f ~/.bash_functions ]; then
    . ~/.bash_functions
fi

export EDITOR='emacs'

alias rm='rm -I'
alias cp='cp -i'
alias mv='mv -i'

alias grep='grep -E --color=auto'
alias sed='sed -r'
alias less='less -R'

alias cats='tail -v -n +1'

shopt -s autocd cdspell dirspell extglob globstar # failglob nocaseglob
