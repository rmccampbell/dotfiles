{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 2,
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "os",
          "style": "plain",
          "foreground": "#ffffff",
          // "foreground_templates": [
          //   "{{$colors := list \"#4285F4\" \"#EA4335\" \"#FBBC05\" \"#34A853\"}}{{randInt 0 4 | index $colors}}"
          // ],
          "template": "{{ if .WSL }}WSL{{ end }}{{.Icon}} ",
          "properties": {
            "windows": "<#00E0FF>\ue62a</>",
            "ubuntu": "<#E95420>\uf31b</>",
            // "debian": "<#4285F4>\uf1a0</>"
            "debian": "\uf1a0"
            // "debian": "\uf17c"
          }
        },
        {
          "type": "root",
          "style": "plain",
          "foreground": "#ffff00",
          "template": "\uf0e7 ",
          "properties": {
            "root_icon": "\uf0e7"
          }
        },
        {
          "type": "session",
          "style": "plain",
          "foreground": "#ffffff",
          // "template": "{{ .UserName }}@{{ .HostName | regexFind `^[^.]+(\\.[^.]+)?` }} "
          // "template": "{{ .UserName }}@{{ or .Env.HOST_ALIAS .HostName }} {{ if .SSHSession }}\ueba9 {{ end }}"
          "template": "{{ .UserName }}@{{ or .Env.HOST_ALIAS .HostName }} "
        },
        {
          "type": "path",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "#ffffff",
          "background": "#007ACC",
          "template": " {{ .Path }} ",
          "properties": {
            "folder_icon": "\uf115",
            // "folder_separator_icon": " \ue0b1 ",
            "style": "full"
          }
        },
        {
          "type": "git",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "#000000",
          "background": "#00ff00",
          "template": " {{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if and (.Staging.Changed) (.Working.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }} "
        },
        {
          "type": "python",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "#100e23",
          "background": "#906cff",
          "template": " \ue235 {{ if .Error }}{{ .Error }}{{ else }}{{ if .Venv }}{{ .Venv }} {{ end }}{{ .Full }}{{ end }} ",
          "properties": {
            "display_mode": "environment",
            "display_default": false,
            "home_enabled": true
          }
        },
        {
          "type": "status",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "#ffffff",
          "background": "#cc0000",
          "template": " \ue20f {{ if ne .Code 0 }}{{ reason .Code }}{{ else }}\uf42e{{ end }} "
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "type": "time",
          "style": "plain",
          "foreground": "#ffffff",
          "template": "[{{ .CurrentDate | date .Format }}]"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "foreground": "#007ACC",
          "template": "‚ùØ "
        }
      ],
      "newline": true
    }
  ]
}
